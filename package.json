{
  "name": "requestinterval",
  "version": "1.0.0",
  "description": "setInterval + requestIdleCallback function",
  "keywords": [
    "browser",
    "idle",
    "interval",
    "requestIdleCallback"
  ],
  "homepage": "https://github.com/azu/requestinterval",
  "bugs": {
    "url": "https://github.com/azu/requestinterval/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/azu/requestinterval.git"
  },
  "license": "MIT",
  "author": "azu",
  "files": [
    "bin/",
    "lib/",
    "src/"
  ],
  "main": "lib/requestinterval.js",
  "types": "lib/requestinterval.d.ts",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production tsc -p .",
    "clean": "rimraf lib/",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\"",
    "prepublish": "npm run --if-present build",
    "test": "mocha \"test/**/*.ts\"",
    "watch": "tsc -p . --watch"
  },
  "husky": {
    "hooks": {
      "precommit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": false,
    "tabWidth": 4
  },
  "devDependencies": {
    "@types/mocha": "^5.2.6",
    "@types/node": "^12.0.2",
    "cross-env": "^5.2.0",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "mocha": "^6.1.4",
    "prettier": "^1.17.1",
    "rimraf": "^2.6.3",
    "ts-node": "^8.1.1",
    "ts-node-test-register": "^8.0.1",
    "typescript": "^3.4.5"
  }
}
